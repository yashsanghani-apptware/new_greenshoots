{
   "compilerOptions": {
     "outDir": "./dist",
     "rootDir": "./src",  // Ensure this points to your source directory
     "target": "ES2020",
     "module": "commonjs",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "baseUrl": "./src",
     "typeRoots": ["./node_modules/@types", "./types"]
   },
   "include": ["src", "types"]
 }
